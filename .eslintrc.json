{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/mediawiki",
		"wikimedia/jquery"
	],
	"globals": {
		"mediaWiki": false,
		"jQuery": false,
		"ve": false
	},
	"rules": {
		"valid-jsdoc": "off",
		"no-redeclare": "off",
		"no-unused-vars": "warn",
		"no-shadow": "warn",
		"mediawiki/msg-doc": "warn",
		"no-jquery/no-class-state": "warn",
		"no-jquery/variable-pattern": "warn",
		"no-jquery/no-each-util": "warn",
		"no-jquery/no-animate-toggle": "warn",
		"no-jquery/no-global-selector": "warn",
		"no-jquery/no-sizzle": "warn",
		"no-jquery/no-done-fail": "warn",
		"prefer-const": "warn"
	}
}
